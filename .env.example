# AIOS V2 Environment Variables
# Copy this to .env and fill in your API keys

# Server
PORT=3000
NODE_ENV=development

# ─── LLM Provider API Keys ─────────────────────────────────
# At least one provider is required for chat to work
OPENAI_API_KEY=sk-proj-your-key-here
ANTHROPIC_API_KEY=sk-ant-your-key-here
GEMINI_API_KEY=AIza-your-key-here

# ─── Local LLM Providers ───────────────────────────────────
OLLAMA_HOST=http://127.0.0.1:11434
LM_STUDIO_HOST=http://127.0.0.1:1234
ANYTHINGLLM_HOST=http://127.0.0.1:3001

# ─── Model Routing ─────────────────────────────────────────
DEFAULT_PROVIDER=openai
FALLBACK_CHAIN=openai,gemini,anthropic,ollama
PRIMARY_MODEL=gpt-4o-mini

# ─── Authentication ────────────────────────────────────────
JWT_SECRET=change-me-to-a-random-string
SESSION_SECRET=change-me-to-a-random-string

# ─── Deep Research Pipeline ────────────────────────────────
TAVILY_API_KEY=tvly-your-key-here
RESEARCH_MAX_CONCURRENCY=3

# ─── MANUS API (research automation) ──────────────────────
MANUS_API_KEY=sk-your-manus-key-here

# ─── CORS (comma-separated origins) ───────────────────────
CORS_ORIGIN=http://127.0.0.1:3000,http://localhost:3000
